<!--views/partials/comment-form.hbs-->

<form action="#" id="newComment" method="POST" > <!-- Tell the form the route -->
  <input type="hidden" value="{{review._id}}" name="reviewId"/>
  <fieldset>
    <legend>Add a Comment</legend>
    <!--TITLE-->
    <div class="form-group">
      <label for="comment-title">Title</label><br>
      <input class="form-control" id="comment-title" type="text" name="title" placeholder="Title"/>
    </div>

    <!--DESCRIPTION-->
    <div class="form-group">
      <label for="comment-content">Description</label>
      <textarea class="form-control" id="comment-content" name="content" rows="10" placeholder="Your comment..."></textarea>
    </div>
  </fieldset>

  <!--BUTTON-->
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Save</button>
  </div>
</form>