<h1>Now Playing</h1>

<div class="movie-container">
  <div class="row">
    {{#each movies}}
    <div class="col-sm-3">
      <a href="/movies/{{this.id}}">
        <img src="https://image.tmdb.org/t/p/w154{{this.poster_path}}" class="movie-thumb">
      </a>
      <p class="movie-title"> {{this.title}}</p>
    </div>
    {{/each}}
  </div>
</div>
